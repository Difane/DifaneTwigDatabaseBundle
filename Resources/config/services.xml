<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="difane.bundle.twigdatabase.twig.loader.database.class">Difane\Bundle\TwigDatabaseBundle\Twig\DatabaseLoader</parameter>
        <parameter key="difane.bundle.twigdatabase.twig.loader.chain.class">Twig_Loader_Chain</parameter>

        <parameter key="difane.bundle.twigdatabase.admin.template.class">Difane\Bundle\TwigDatabaseBundle\Admin\TemplateAdmin</parameter>
        <parameter key="difane.bundle.twigdatabase.entity.template">Difane\Bundle\TwigDatabaseBundle\Entity\Template</parameter>
    </parameters>

    <services>
        <service id="difane.bundle.twigdatabase.twig.loader.database" class="%difane.bundle.twigdatabase.twig.loader.database.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
        </service>

        <service id="difane.bundle.twigdatabase.twig.loader.chain" class="%difane.bundle.twigdatabase.twig.loader.chain.class%">
            <call method="addLoader">
                 <argument type="service" id="twig.loader" />
            </call>
            <call method="addLoader">
                 <argument type="service" id="difane.bundle.twigdatabase.twig.loader.database" />
            </call>
        </service>

        <service id="difane.bundle.twigdatabase.admin.template" class="%difane.bundle.twigdatabase.admin.template.class%">
            <tag name="sonata.admin" manager_type="orm" group="Twig" label="Templates" />
            <argument />
            <argument>%difane.bundle.twigdatabase.entity.template%</argument>
            <argument />
        </service>
    </services>
</container>
